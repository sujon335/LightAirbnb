<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="7dp"
    tools:context=".BookingRequestsActivity"
    android:contextClickable="true"
    android:background="@drawable/gradient2">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="#0A6454">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/cardView5"
            android:layout_alignLeft="@+id/cardView5"
            android:layout_alignStart="@+id/cardView5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/req_room_title"
                android:layout_marginLeft="10dp"
                android:textSize="22dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/yellow"
                android:textStyle="italic"
                android:id="@+id/req_room_location"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/req_room_title"
                android:textSize="18dp" />



                <TextView
                    android:id="@+id/req_guest"
                    android:layout_below="@id/req_room_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/req_guest_email"
                    android:layout_below="@+id/req_guest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="18dp" />


            <TextView
                android:id="@+id/req_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/req_guest_email"
                />
            <android.support.v7.widget.CardView
                android:id="@+id/cardViewaccept"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@+id/req_time"
                android:layout_alignStart="@+id/req_time"
                android:layout_below="@+id/req_time"

                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/cardViewaccept"
                    android:layout_alignLeft="@+id/cardViewaccept"
                    android:layout_alignStart="@+id/cardViewaccept">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Accept"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewdiscard"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/cardViewaccept"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/cardViewaccept"
                    android:layout_alignLeft="@+id/cardViewaccept"
                    android:layout_alignStart="@+id/cardViewaccept">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Discard"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


